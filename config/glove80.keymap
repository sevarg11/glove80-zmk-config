// ==== PER-KEY-RGB <section ends> =====

&sk { quick-release; };

/ {
    behaviors {
        // For the "layer" key, it'd nice to be able to use it as either a shift or a toggle.
        // Configure it as a tap dance, so the first tap (or hold) is a &mo and the second tap is a &to

        layer_td: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            label = "LAYER_TAP_DANCE";
            #binding-cells = <0>;
            tapping-term-ms = <350>;
            bindings = <&mo 1>, <&to 1>;
        };

        magic: magic_hold_tap {
            compatible = "zmk,behavior-hold-tap";
            label = "MAGIC_HOLD_TAP";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
            bindings = <&mo>, <&rgb_ug_status_macro>;
        };

        DoubleTapShift: DoubleTapShift {
            compatible = "zmk,behavior-tap-dance";
            label = "DOUBLETAPSHIFT";
            #binding-cells = <0>;
            bindings = <&sk LEFT_SHIFT>, <&caps_word>;

            tapping-term-ms = <500>;
        };

        SpaceBarTapDance: SpaceBarTapDance {
            compatible = "zmk,behavior-tap-dance";
            label = "SPACEBARTAPDANCE";
            #binding-cells = <0>;
            bindings = <&kp SPACE>, <&double_space_period>;
        };

        ShiftHold: ShiftHold {
            compatible = "zmk,behavior-hold-tap";
            label = "SHIFTHOLD";
            bindings = <&shiftPressKey>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <280>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <150>;
            flavor = "balanced";
        };
    };

    macros {
        rgb_ug_status_macro: rgb_ug_status_macro_0 {
            label = "RGB_UG_STATUS";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&rgb_ug RGB_STATUS>;
        };

        bt_0: bt_profile_macro_0 {
            label = "BT_0";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 0>;
        };

        bt_1: bt_profile_macro_1 {
            label = "BT_1";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 1>;
        };

        bt_2: bt_profile_macro_2 {
            label = "BT_2";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 2>;
        };

        bt_3: bt_profile_macro_3 {
            label = "BT_3";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&out OUT_BLE &bt BT_SEL 3>;
        };

        double_space_period: double_space_period {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp DOT &kp SPACE &sk LSHIFT>;
            label = "DOUBLE_SPACE_PERIOD";
        };

        shiftPressKey: shiftPressKey {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "SHIFTPRESSKEY";
        };

        schluss: schluss {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp RA(N0) &kp RA(N2) &kp RA(N2) &kp RA(N3)>;
            label = "SCHLUSS";
        };

        um_lc_a: uma {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp RA(N0) &kp RA(N2) &kp RA(N2) &kp RA(N8)>;
            label = "Umlaut a";
        };

        um_uc_A: umA {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp RA(N1) &kp RA(N4) &kp RA(N2)>;
            label = "Umlaut A";
        };
    };

    combos {
        compatible = "zmk,combos";

        schluss {
            bindings = <&schluss>;
            key-positions = <72 36>;
            layers = <0>;
        };

        um_lc_a {
            bindings = <&um_lc_a>;
            key-positions = <72 35>;
        };

        um_uc_a {
            bindings = <&um_uc_A>;
            key-positions = <72 52 35>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // ---------------------------------------------------------------------------------------------------------------------------------
            // |  F1   |  F2 |  F3 |  F4  |  F5  |                                                               |  F6   |  F7   |  F8  |   F9  |  F10 |
